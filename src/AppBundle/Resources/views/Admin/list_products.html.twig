{% extends "::base.html.twig" %}

{% block body %}

    <div class="list">
        <a href="{{ path('app_admin_addproduct') }}" class="btn btn-primary">
            <i class="fa fa-plus"></i>Add product
        </a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col" colspan="2">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th colspan="3" width="10%">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <th scope="row">{{ product.id }}</th>
                <td>
                    {% if product.description %}
                        <img src="/uploads/photos/{{ product.description }}" width="50">
                    {% else %}
                        no photo
                    {% endif %}
                </td>
                <td>{{ product.name }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>
                    <a href="{{ path('app_admin_editproduct',{id:product.id}) }}"><i class="fa fa-edit"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('app_admin_managephotos',{id:product.id}) }}"><i
                                class="fa fa-photo"></i> </a>
                </td>
                <td>
                    <a href="{{ path('app_admin_deleteproduct',{id:product.id}) }}" class="text-danger"><i
                                class="fa fa-times"></i> </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

